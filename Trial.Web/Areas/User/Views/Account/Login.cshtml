@model Trial.Core.Models.User.UserLoginItem

@{
    ViewBag.Title = Trial.Core.Strings.Login;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/panel/validate")
<section class="section-account">
    <div class="img-backdrop" style="background-image: url('/Images/login.jpg')"></div>
    <div class="spacer"></div>
    <div class="card contain-xs style-transparent">
        <div class="card-body">
            <div class="row mb-30">
                <div class="col-sm-6">
                    <span class="text-lg text-bold text-primary">@Trial.Core.Strings.ProjectName</span>
                </div>
                <div class="col-sm-6">
                    <a class="btn btn-primary btn-raised ink-reaction pull-right" href="@Url.Action("Create","Account")">@Trial.Core.Strings.Create</a>
                </div>
            </div>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form floating-label" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.EditorFor(model => model.UserNameMail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.UserNameMail)
                    @Html.ValidationMessageFor(model => model.UserNameMail, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-12">
                            <button class="btn btn-primary btn-raised ink-reaction" type="submit">@Trial.Core.Strings.Login</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>